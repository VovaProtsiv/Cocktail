<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <EditText
        android:id="@+id/searchCocktail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"

        />

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recycler_drink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/text_help_search_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="180dp"
            android:gravity="center"
            android:textSize="14sp"
            android:text="Enter text to start search"
            app:layout_constraintTop_toBottomOf="@+id/recycler_drink" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>